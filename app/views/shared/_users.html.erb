<div class="users container" >
  <% @users.each do |user| %>
    <div class="well infobox my-well">
      <span class="btn btn-default" id="horizonal_button"> <%= user.category.name %></span><br>
      <blockquote><p><%= user.status %></p></blockquote>
      drinks: <span class="<%= drink?(user) %>"></span>
      vegan: <span class="<%= is_vegan?(user) %>"></span>
      height: <%= user.height %> cm
      weight: <%= weight_in_kg(user.weight) %> KG
      <div class="my-image pull-right img-circle"><%= image_tag user.image.url %><br/></div>
      <%= link_to "Download", user_path(user, format: "pdf"), class: 'btn btn-info' %>
    </div>
  <% end %>
</div>

<div class="custom_pagination">
  <%= will_paginate @users %>
</div>

